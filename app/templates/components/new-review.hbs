{{#if addNewReview}}
  <h1>New Review</h1>
    <form>
      <div class="form-group">
        <label for="reviewer">Your Name</label>
        {{input value=reviewer id="reviewer"}}
      </div>

      <div class="form-group">
        <label for="review">Your Review</label>
        {{input value=review id="review"}}
      </div>

      <div class="form-group">
        <label for="rating">Your Rating</label>
        {{#x-select value=rating}}
          {{#x-option value="five"}}&#9733;&#9733;&#9733;&#9733;&#9733;{{/x-option}}
          {{#x-option value="four"}}&#9733;&#9733;&#9733;&#9733;{{/x-option}}
          {{#x-option value="three"}}&#9733;&#9733;&#9733;{{/x-option}}
          {{#x-option value="two"}}&#9733;&#9733;{{/x-option}}
          {{#x-option value="one"}}&#9733;{{/x-option}}
        {{/x-select}}
      </div>
      <button class="btn btn-primary" {{action 'save'}}>Save</button>
    </form>

{{else}}
  <hr>
  <button class="btn btn-primary" {{action 'showReviewForm'}}>New Review</button>
{{/if}}
